#include <iostream>

using namespace std;
int main()
{
	int number;
	int summation = 0;
	int one;
	
	cout << "Enter a number: ";
	cin >> number;
	
	for (;;)
	
	{
		if (number>0)
		
	{
		summation = 0;
	for (one = 1; one <=number; one++)	
	{
		summation = summation + one;
	}
	
	cout << "The sum of all whole number from 1 to " << number<< " is " << summation << endl;
	
	cout << "Enter a number: ";
	cin >> number;
	}
	else
	{
		cout << "Thank You!"; 
		break;
	}
}
	return 0;
}

