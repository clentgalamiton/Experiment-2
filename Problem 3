#include<iostream>
#include<cmath>
#include<iomanip>
	using namespace std;
  
	int main ()
	{
	    int x;
	    int y;
	    const float z=2.5;
	    
	    cout<< "Enter your x value: ";
	    cin>> x;
	    cout<< "Enter your y value: ";
	    cin>> y;
	    
	    switch(x)
	    {
	        case 1:
	        if(y>1 && y<5)
	        cout<< "The value of V is " << setw (10) << setprecision(2) << x*y*z;
	        else if (y>=5)
	        cout<< "The value of V is " << setw (10) << setprecision(2) << (x + (y/z));
	        else 
	        cout<< "The value of V is " << setw (10) << setprecision(2) << x + y + z;
	        break;
	        
	        case 2:
	        if (y<=5)
	        cout<< "The value of V is  " << setw (10) << setprecision(2) << abs((x-y)/z);
	        else if (y>5)
	        cout<< "The value of V is  " << setw (10) << setprecision(2) << (x - (sqrt(y+z)));
	        break;
	        
	        default:
	        cout<< "The value of V is  " << setw (10) << setprecision(2) << x + y + z;
}}
